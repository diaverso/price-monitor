# ============================================
# Monitor de Precios - Variables de Entorno
# ============================================
# Copia este archivo a .env y personaliza los valores

# ============================================
# Configuración de MySQL
# ============================================
MYSQL_ROOT_PASSWORD=SuperSecureRootPassword123!
MYSQL_DATABASE=price_monitor
MYSQL_USER=price_monitor_user
MYSQL_PASSWORD=SecureUserPassword456!

# ============================================
# Configuración Web
# ============================================
# Puerto en el HOST para acceder a la aplicación
WEB_PORT=8080

# Inicializar automáticamente la base de datos
# true = ejecutar schema.sql al iniciar
# false = no ejecutar (base de datos ya existe)
AUTO_INIT_DB=true

# ============================================
# Zona Horaria
# ============================================
TZ=Europe/Madrid

